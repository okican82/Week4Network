<?xml version="1.0" encoding="utf-8"?>
<resources>




    <style name="typeOneButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="typeTwoButton"  >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>

    </style>


    
    <style name="HintLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/login_horizontal_margin</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/place_holder_title</item>
    </style>

    <style name="textInputTypOne">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/login_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/login_horizontal_margin</item>
        <item name="android:backgroundTint">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:textCursorDrawable">@color/textColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/input_text</item>
    </style>


</resources>